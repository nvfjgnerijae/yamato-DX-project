        #interactive {
            position: relative;
            width: 100%;
            max-width: 640px;
            height: auto;
            margin: 0 auto;
            overflow: hidden;
            border: 2px solid #555;
            background-color: #000;
        }
        
        /* 映像自体のスタイル */
        #interactive video {
            width: 100%;
            height: auto;
        }

        /* 読み取り用の枠線（キャンバス） */
        #interactive canvas.drawingBuffer {
            position: absolute;
            left: 0;
